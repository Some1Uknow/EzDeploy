# API Server Environment Variables
# Copy this file to .env and fill in your actual values

# Redis (Render Key Value internal URL recommended)
# Format: redis://red-xxxxxxxxxxxxxxxxxxxx:6379 or rediss://... if TLS
REDIS_KEY=rediss://default:your_redis_password@your_redis_host:port

# Database (Render Postgres internal connection string recommended)
DATABASE_URL=postgresql://user:password@host:5432/database

# CORS (allow your client origin)
CORS_ORIGIN=https://your-client.example.com

# AWS & ECS
S3_BUCKET=your_s3_bucket_name
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_access_key
S3_REGION=ap-southeast-2

# ECS Task trigger (used by /controllers/project.js)
ECS_CLUSTER=your-ecs-cluster-name
ECS_TASK=your-ecs-task-definition-name-or-arn

# Optional: VPC networking for Fargate runTask
# Comma-separated lists
AWS_SUBNETS=subnet-abc,subnet-def
AWS_SECURITY_GROUPS=sg-123,sg-456

# Server Ports (Render sets PORT automatically; keep for local dev)
PORT=9000
SOCKET_PORT=9999